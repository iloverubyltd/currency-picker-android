<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?colorPrimarySurface"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toTopOf="@+id/button_open_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_constraint_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_iso_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="?colorOnPrimary"
                android:text="@string/currency_iso_code"
                android:textAppearance="?textAppearanceCaption" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_iso_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="?colorOnPrimary"
                android:textAppearance="?textAppearanceHeadline3"
                tools:layout_editor_absoluteX="210dp"
                tools:layout_editor_absoluteY="110dp"
                tools:text="AUD" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="?colorOnPrimary"
                android:text="@string/currency_name"
                android:textAppearance="?textAppearanceCaption" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_name_text_view"
                android:layout_width="0dp"
                android:textColor="?colorOnPrimary"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceSubtitle1"
                tools:text="Australian Dollars" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_symbol_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/currency_symbol"
                android:textAppearance="?textAppearanceCaption"
                android:textColor="?colorOnPrimary"
                tools:layout_editor_absoluteX="111dp"
                tools:layout_editor_absoluteY="131dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_symbol_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceSubtitle1"
                android:textColor="?colorOnPrimary"
                tools:layout_editor_absoluteX="189dp"
                tools:layout_editor_absoluteY="133dp"
                tools:text="$" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_flag_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/currency_flag"
                android:textAppearance="?textAppearanceCaption"
                android:textColor="?colorOnPrimary"
                app:flow_wrapMode="aligned"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="303dp" />

            <ImageView
                android:id="@+id/selected_currency_flag_image_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:contentDescription="@string/selected_currency_flag_image_view_content_desc"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:scaleType="fitStart"
                tools:layout_editor_absoluteX="259dp"
                tools:layout_editor_absoluteY="303dp"
                tools:src="@drawable/flag_aud" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:constraint_referenced_ids="selected_currency_iso_label,selected_currency_iso_text_view,selected_currency_flag_label,selected_currency_flag_image_view"
                app:flow_horizontalGap="@dimen/grid_1"
                app:flow_maxElementsWrap="2"
                app:flow_verticalAlign="baseline"
                app:flow_verticalGap="@dimen/grid_1"
                app:flow_wrapMode="aligned"
                app:layout_constraintBottom_toTopOf="@id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/grid_1_5"
                android:layout_marginBottom="@dimen/grid_0_5"
                android:backgroundTint="?colorOnPrimary"
                app:layout_constraintBottom_toTopOf="@id/flow2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/flow1" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:constraint_referenced_ids="selected_currency_name_label,selected_currency_name_text_view,selected_currency_symbol_label,selected_currency_symbol_text_view"
                app:flow_horizontalAlign="start"
                app:flow_horizontalGap="@dimen/grid_1"
                app:flow_maxElementsWrap="2"
                app:flow_verticalAlign="baseline"
                app:flow_verticalGap="@dimen/grid_1"
                app:flow_wrapMode="aligned"
                app:layout_constraintBottom_toTopOf="@id/button_currency_picker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_currency_picker"
                style="@style/RoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_2"
                android:background="?colorPrimaryDark"
                android:text="@string/pick_currency"
                app:cornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/flow2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_open_fragment"
        style="@style/RoundedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/button_open_fragment"
        app:layout_constraintBottom_toTopOf="@+id/card_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view1"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:cardElevation="8dp"
        app:contentPadding="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_open_fragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_constraint_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_preferences"
                style="@style/RoundedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_open_preferences"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_preference_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/grid_1"
                android:text="@string/selected_currency"
                android:textAppearance="?textAppearanceCaption"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/selected_currency_preference_value"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_open_preferences" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/selected_currency_preference_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textAppearance="?textAppearanceSubtitle1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/selected_currency_preference_label"
                app:layout_constraintTop_toBottomOf="@+id/button_open_preferences"
                tools:text="USD" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
