<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/currency_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/pick_currency"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView"
        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Currency Name"
        app:layout_constraintBottom_toBottomOf="@+id/selected_currency_name_text_view"
        app:layout_constraintEnd_toEndOf="@+id/selected_currency_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_currency_name_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView2"
        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Selected Currency Name" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Currency ISO Code"
        app:layout_constraintBottom_toBottomOf="@+id/selected_currency_iso_text_view"
        app:layout_constraintEnd_toEndOf="@+id/selected_currency_iso_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_currency_iso_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView3"
        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Selected Currency ISO Code" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Currency Symbol"
        app:layout_constraintBottom_toBottomOf="@+id/selected_currency_symbol_text_view"
        app:layout_constraintEnd_toEndOf="@+id/selected_currency_symbol_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_currency_symbol_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView4"
        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Selected Currency Symbol" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Currency Flag"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/selectedCurrencyPreference"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selected_currency_flag_image_view"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />


    <Button
        android:id="@+id/openFragment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Open Fragment"
        app:layout_constraintBottom_toBottomOf="@+id/openPreferences"
        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openPreferences"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Open Preferences"
        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
        app:layout_constraintTop_toTopOf="@+id/currency_picker_button" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="133dp"
        android:layout_height="0dp"
        android:text="Selected Currency"
        app:layout_constraintBottom_toBottomOf="@+id/selectedCurrencyPreference"
        app:layout_constraintStart_toStartOf="@+id/currency_picker_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectedCurrencyPreference"
        android:layout_width="205dp"
        android:layout_height="19dp"
        android:text="Selected Currency Preference"
        app:layout_constraintStart_toStartOf="@+id/selected_currency_flag_image_view"
        app:layout_constraintTop_toTopOf="@+id/selected_currency_flag_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>